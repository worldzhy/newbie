  @@schema("application/recruitment")
}

enum CandidateStatus {
  ACTIVE
  INACTIVE

  @@schema("application/recruitment")
}

model CandidateProfile {
  id                String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  uniqueNumber      String
  givenName         String
  middleName        String?
  familyName        String
  fullName          String?
  birthday          DateTime?
  gender            String?
  email             String?
  primaryPhone      String
  primaryPhoneExt   String?
